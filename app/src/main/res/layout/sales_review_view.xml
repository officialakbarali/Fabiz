<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="7dp">

    <TextView
            android:id="@+id/sales_review_view_bill_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Bill Id :14" />


    <TextView
            android:id="@+id/sales_review_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="Date :20" />

    <TextView
            android:id="@+id/sales_review_view_items_names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            tools:text="Items :30" />

    <Button
            android:id="@+id/sales_review_view_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="View" />

    <TextView
            android:id="@+id/sales_review_view_tot_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            tools:text="Total Items :4" />

    <TextView
            android:id="@+id/sales_review_view_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            tools:text="Bill Total Amount :17" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="7dp"
            android:background="@color/colorPrimaryDark" />

</RelativeLayout>