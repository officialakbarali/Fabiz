<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="17dp">

    <TextView
            android:id="@+id/sales_return_pop_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="19sp"
            tools:text="Broasted Chicken" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/sales_return_pop_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                android:text="Date :29,Mon Dec 1997 12:25 AM" />

        <Button
                android:id="@+id/sales_return_pop_date_change"
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Change"
                android:textAllCaps="false"
                android:visibility="gone" />
    </LinearLayout>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Price" />

        <EditText
                android:id="@+id/sales_return_pop_price"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                tools:text="250" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/sales_return_pop_max"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                tools:text="Enter QTY to Return\n(Maximum 3)" />

        <EditText
                android:id="@+id/sales_return_pop_qty"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                tools:text="2" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

        <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Total Amount\nReturned" />

        <TextView
                android:id="@+id/sales_return_pop_total"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                tools:text="500" />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/sales_return_pop_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Return"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/sales_return_pop_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>