<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:gravity="center"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textSize="19sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/pop_up_for_payment_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text=": 29,Mon Sep 1997 02:15 AM" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/pop_up_for_payment_bill_amt_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bill Amount"
                android:textSize="19sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/pop_up_for_payment_bill_amt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text=": 4500.000" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/pop_up_for_payment_label_ent_amt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Entered Amount"
                android:textSize="19sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/pop_up_for_payment_ent_amt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text=": 4500.000" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:id="@+id/pop_up_for_payment_due_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Due Amount"
                android:textSize="19sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/pop_up_for_payment_due"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text=": 5500.000" />

    </LinearLayout>


    <LinearLayout
             android:visibility="gone"
            android:id="@+id/pop_up_for_payment_due_cont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Total Due Amount"
                android:textSize="19sp"
                android:textStyle="bold" />

        <TextView
                android:id="@+id/pop_up_for_payment_due_tot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text=": 5500.000" />

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/pop_up_for_payment_okay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:textAllCaps="false" />

        <Button
                android:id="@+id/pop_up_for_payment_add_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pay Due "
                android:textAllCaps="false"
                android:visibility="gone" />
    </LinearLayout>


</LinearLayout>