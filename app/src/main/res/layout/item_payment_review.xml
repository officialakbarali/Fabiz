<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="5dp">

    <TextView
            android:id="@+id/payment_review_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Payment Id :10" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Delete"
            android:textAllCaps="false" />


    <TextView
            android:id="@+id/payment_review_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            tools:text="Date :24" />

    <TextView
            android:id="@+id/payment_review_item_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="22sp"
            tools:text="Paid Amount :17" />

    <TextView
            android:id="@+id/payment_review_item_tot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            tools:text="Total :11" />

    <TextView
            android:id="@+id/payment_review_item_paid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            tools:text="Paid :11" />

    <TextView
            android:id="@+id/payment_review_item_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            tools:text="Due :11" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />
</RelativeLayout>